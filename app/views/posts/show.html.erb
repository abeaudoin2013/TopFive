<p><%= @post.body %></p>

<p>by <%= link_to @post.user.username, @post.user %></p>
<% if current_user and current_user == @post.user  %> 
	<p><%= link_to 'delete post', @post, method: :delete %></p>
<% end %> 

<% if current_user %>
	<h3>New Comment</h3>
		<%= form_for [@post, @comment] do |f| %>
			<%= f.text_area :body %><br>
			<%= f.submit %>
		<% end %> 
	<% end %> 


<h4>Comments</h4>
	<div><% @post.comments.reverse.each do |comment| %> 
		<p class='comments'><%= comment.body %></p>
		<p><%= link_to comment.user.username, comment.user %></p>
	</div>
	<% end %>
